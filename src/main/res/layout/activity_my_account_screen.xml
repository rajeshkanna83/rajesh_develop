<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/my_account_parent_layout"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"></include>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/my_account_scrollview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/my_account_child_layout">

            <include
                layout="@layout/my_account_info">
            </include>

            <include
                layout="@layout/my_account_payment">
            </include>

            <include
                layout="@layout/my_account_preferences">
            </include>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>