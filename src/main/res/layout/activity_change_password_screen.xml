<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_text"></include>

    <RelativeLayout
        android:layout_marginTop="20dp"
        style="@style/Custom_relative_layout">

        <TextView
            android:id="@+id/textView1"
            style="@style/My_account_textView_light"
            android:text="Current Password" />

        <EditText
            android:id="@+id/et_current_password"
            style="@style/My_account_editText"
            android:layout_toEndOf="@+id/textView1"
            android:hint="@string/enter_password" />
    </RelativeLayout>

    <View style="@style/Custom_view_light"></View>

    <RelativeLayout style="@style/Custom_relative_layout">

        <TextView
            android:id="@+id/textView2"
            style="@style/My_account_textView_light"
            android:text="New Password" />

        <EditText
            android:id="@+id/et_new_password"
            style="@style/My_account_editText"
            android:layout_toEndOf="@+id/textView2"
            android:hint="@string/enter_password" />
    </RelativeLayout>

    <View style="@style/Custom_view_light"></View>

    <RelativeLayout style="@style/Custom_relative_layout">

        <TextView
            android:id="@+id/textView3"
            style="@style/My_account_textView_light"
            android:text="Confirm password" />

        <EditText
            android:id="@+id/et_confirm_password"
            style="@style/My_account_editText"
            android:layout_toEndOf="@+id/textView3"
            android:hint="@string/enter_password" />
    </RelativeLayout>

</LinearLayout>