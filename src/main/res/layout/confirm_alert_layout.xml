<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/commonSpace"
    android:layout_marginRight="@dimen/commonSpace"
    android:layout_marginLeft="@dimen/commonSpace"
    android:background="@drawable/confirm_alert_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/order_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/commonSpace"
            android:maxHeight="35dp"
            android:minHeight="35dp"
            android:visibility="gone"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/alert_heading"
            android:fontFamily="fonts/ProximaNova-Bold.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/commonMargin5"
            android:layout_marginTop="@dimen/commonSpace"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/commonSpace"
            android:layout_marginRight="@dimen/commonSpace"
            android:textColor="@color/black"
            android:textSize="@dimen/toolbar_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alert_heading2"
            android:fontFamily="fonts/ProximaNova-Light.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/commonMargin5"
            android:layout_marginTop="@dimen/commonSpace"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/commonSpace"
            android:layout_marginRight="@dimen/commonSpace"
            android:textColor="@color/black"
            android:textSize="@dimen/toolbar_title"
            android:visibility="gone"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/alert_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="fonts/ProximaNova-Light.otf"
            android:padding="@dimen/commonMargin5"
            android:layout_marginTop="@dimen/commonMargin5"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/commonSpace"
            android:layout_marginRight="@dimen/commonSpace"
            android:textSize="@dimen/text_medium1" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/ok_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/confirm_button_bg"
            android:fontFamily="fonts/ProximaNova-SemiBold.otf"
            android:gravity="center"
            android:text="OK"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xlarge"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>
