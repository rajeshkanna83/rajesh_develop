<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/My_account_textView"
        android:text="Preferences" />

    <RelativeLayout
        style="@style/Custom_relative_layout"
        android:id="@+id/tw_order_preferences">

        <TextView
            style="@style/My_account_textView_light"

            android:text="Order Preferences" />

        <ImageView style="@style/Custom_image_view_right" />
    </RelativeLayout>

    <TextView style="@style/My_account_textView" />
    <RelativeLayout
        android:id="@+id/faq"
        style="@style/Custom_relative_layout">

        <TextView
            style="@style/My_account_textView_light"
            android:text="Help" />

        <ImageView style="@style/Custom_image_view_right" />
    </RelativeLayout>

    <View
        style="@style/Custom_view_light"></View>
    <RelativeLayout
        android:id="@+id/pricetable"
        style="@style/Custom_relative_layout">

        <TextView
            style="@style/My_account_textView_light"
            android:text="Prices" />

        <ImageView style="@style/Custom_image_view_right" />
    </RelativeLayout>

    <View
        style="@style/Custom_view_light"></View>
    <RelativeLayout
        android:id="@+id/locations"
        style="@style/Custom_relative_layout">

        <TextView
            style="@style/My_account_textView_light"
            android:text="Locations" />

        <ImageView style="@style/Custom_image_view_right" />
    </RelativeLayout>


    <View
        style="@style/Custom_view_light"></View>
    <RelativeLayout
        android:id="@+id/terms_and_conditions"
        style="@style/Custom_relative_layout">

        <TextView
            style="@style/My_account_textView_light"
            android:text="Terms and Conditions" />

        <ImageView style="@style/Custom_image_view_right" />
    </RelativeLayout>

    <View
        style="@style/Custom_view_light"></View>

    <RelativeLayout
        android:id="@+id/privacy_policy_layout"
        style="@style/Custom_relative_layout">

        <TextView
            style="@style/My_account_textView_light"
            android:text="Privacy Policy" />

        <ImageView style="@style/Custom_image_view_right" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/silver_light"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_reset_password"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="Reset password"
            android:textColor="@color/text_light" />

        <TextView
            android:id="@+id/btn_sign_out"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:gravity="center"
            android:text="Sign Out"
            android:textColor="@color/text_light" />
    </LinearLayout>
</LinearLayout>