<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/pressbox"
    android:contentInsetEnd="0dp"
    android:contentInsetLeft="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetStart="0dp"
    android:elevation="2dp"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    android:gravity="center_vertical"
    app:navigationIcon="@drawable/hamburger">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="fonts/ProximaNova-Bold.otf"
            android:text="Select Service(s)"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="@dimen/toolbar_title"
            android:textStyle="bold"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/toolbar_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="?android:attr/actionBarSize"
            android:paddingTop="@dimen/commonMargin5"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/logo"
            android:background="@color/pressbox"
           />

        <TextView
            android:id="@+id/toolbar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:fontFamily="fonts/ProximaNova-Regular.otf"
            android:text="Next"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/toolbar_title" />

    </LinearLayout>
    </FrameLayout>
</android.support.v7.widget.Toolbar>
